{
  "name": "@shorten",
  "version": "0.0.0",
  "description": "URL Shortener Parser Microservice: A simple API built with Node.js and Express that converts long URLs into shorter, more manageable links.",
  "main": "src/bin/index.js",
  "scripts": {
    "start": "node src/bin/index.js",
    "dev": "nodemon --watch src/ src/bin/index.js",
    "docker:compose": "docker-compose -f docker-compose.yml up",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "pretest": "pnpm run lint",
    "test": "cross-env NODE_ENV=test nyc tap \"__test__/**/*.test.js\" -- --no-check-coverage",
    "test:coverage": "cross-env NODE_ENV=test nyc tap --coverage-report=html \"__test__/**/*.test.js\" -- --no-check-coverage",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') { require('husky').install() }\"",
    "version": "cz bump",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "keywords": [
    "microservice",
    "URL",
    "Links",
    "nodejs",
    "express",
    "freecodeCamp"
  ],
  "author": "zhid0399123 <zhid0399123@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "kolorist": "^1.8.0",
    "pino-http": "^8.5.1",
    "pino-pretty": "^10.2.3",
    "tap": "^18.6.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.5",
    "standard": "^17.1.0",
    "supertest": "^6.3.3"
  }
}
